{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Makefile",
            "type": "shell",
            "command": "make",
            "args": [
                "-B"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cwaggle"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/cwaggle"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Execute cwaggle_lasso",
            "type": "shell",
            "command": "./cwaggle_lasso",
            "options": {
                "cwd": "${workspaceFolder}/cwaggle/bin"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build with Makefile",
                "Execute cwaggle_lasso"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}